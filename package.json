{
  "name": "@tipovacka/root",
  "version": "1.0.0",
  "author": "Jakub Duchon",
  "license": "ISC",
  "private": true,
  "description": "Root package for Tipovacka project",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build-pkgs": "npm run build --workspace=packages/",
    "dev": "npm run dev --workspace=apps/",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "lint-staged": {
    "apps/**/*.{ts, vue}": [
      "eslint --fix"
    ],
    "packages/**/*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "ts-loader": "^8.2.0",
    "typescript": "^4.5.4",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "mongoose": "^6.4.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Duchynko/betting-game.git"
  },
  "bugs": {
    "url": "https://github.com/Duchynko/betting-game/issues"
  },
  "homepage": "https://github.com/Duchynko/betting-game#readme"
}
