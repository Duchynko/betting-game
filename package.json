{
  "name": "@tipovacka/root",
  "version": "1.0.0",
  "author": "Jakub Duchon",
  "license": "ISC",
  "private": true,
  "description": "Root package for Tipovacka project",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "files": [
    "eslint-preset.js"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -pt run build",
    "dev": "yarn workspaces foreach run dev",
    "lint": "yarn workspaces foreach run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "yarn workspaces foreach run test",
    "g:tsc": "cd $INIT_CWD && tsc"
  },
  "lint-staged": {
    "apps/**/*.{js, ts, vue}": [
      "eslint --fix"
    ],
    "packages/**/*.ts": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.5",
    "@nuxtjs/eslint-config-typescript": "^8.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Duchynko/betting-game.git"
  },
  "bugs": {
    "url": "https://github.com/Duchynko/betting-game/issues"
  },
  "homepage": "https://github.com/Duchynko/betting-game#readme"
}
