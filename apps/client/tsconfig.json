{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Nuxt JS",
  "extends": "@tipovacka/tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["@types/node", "@nuxt/types", "@nuxtjs/axios", "@types/nuxtjs__auth"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
